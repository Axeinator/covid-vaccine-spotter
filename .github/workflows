name: Run lint on Main
on:
  push:
    branches:
      - main
    # can specify directories push/PR affects
    # paths:
    #  - 'src/**/*.js'
    #  - 'migrations/**/*.js'
  pull_request:
    branches:
      - main
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: Install modules
      run: yarn
    - name: Run ESLint
      run: yarn lint